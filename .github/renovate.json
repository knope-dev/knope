{
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)",
    "github>Turbo87/renovate-config//rust/updateToolchain",
    ":automergeStableNonMajor",
    "helpers:pinGitHubActionDigests"
  ],
  "platformAutomerge": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "Astro",
      "matchPackageNames": [
        "/^@?astro/",
        "starlight"
      ]
    },
    {
      "groupName": "toml",
      "matchPackageNames": [
        "toml",
        "toml_edit"
      ]
    },
    {
      "groupName": "deno",
      "matchPackageNames": [
        "deno*",
        "jsonc-parser"
      ]
    }
  ],
  "customManagers": [
    {
      "description": "Update GitHub Actions versions in docs",
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "fileMatch": [
        "^docs/src/content/docs.*\\.md(x)?$"
      ],
      "matchStrings": [
        "uses: (?<depName>.+)@(?<currentValue>.+)"
      ]
    },
    {
      "description": "Update cargo-binstall in GitHub Actions",
      "customType": "regex",
      "datasourceTemplate": "crate",
      "depNameTemplate": "cargo-binstall",
      "fileMatch": [
        "^\\.github/workflows/.*\\.yml$"
      ],
      "matchStrings": [
        "BINSTALL_VERSION: (?<currentValue>.+)"
      ]
    }
  ]
}
